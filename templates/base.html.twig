        <link rel="icon" type="image/svg+xml" href="/build/images/favicon/favicon.svg" />
        <link rel="shortcut icon" href="/build/images/favicon/favicon.ico" />
        <link rel="apple-touch-icon" sizes="180x180" href="/build/images/favicon/apple-touch-icon.png" />
        <meta name="apple-mobile-web-app-title" content="ThomasC" />
        <link rel="manifest" href="/build/images/favicon/site.webmanifest" />

        <meta property="og:title" content="Thomas Caron - Développeur Web Fullstack (Symfony & Vue.js)">
