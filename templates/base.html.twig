        <meta property="og:image:width" content="1200">
        <meta property="og:image:height" content="630">
        <meta property="og:image:type" content="image/png">
        <meta property="og:url" content="https://www.thomascaron.com">
        <meta property="og:type" content="website">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>

        {% block body %}

            <div {{ vue_component('Homepage', {
                api: {
                    getAbout: path('api_about'),
                    getProjects: path('api_project'),
                    getReferences: path('api_reference')
                }
            }) }}></div>

        {% endblock %}
    </body>
</html>
